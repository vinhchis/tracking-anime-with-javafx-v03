<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="myListBorderPane"
   minHeight="-Infinity" minWidth="-Infinity" prefHeight="580.0" prefWidth="1200.0"
   xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.controller.DiscoverController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="searchTextField" promptText="Enter anything about your anime">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <Button fx:id="searchButton" mnemonicParsing="false" prefHeight="44.0" prefWidth="204.0" text="Search" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane BorderPane.alignment="CENTER" fitToWidth="true">
        <content>
        <FlowPane fx:id="animeFlowPane" hgap="20.0" vgap="24.0">
           <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
        </FlowPane>
      </content>
      </ScrollPane>
   </center>
</BorderPane>
